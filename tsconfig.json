{
  "files": [
    "src/vanilla-marquee.js"
  ],
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2016",
    "module": "ES6",
    "allowJs": true,
    // "resolveJsonModule": true,
    "noEmit": false,
    "maxNodeModuleJsDepth": 3,
    "moduleResolution": "Node",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "outFile": "./dist/vanilla-marquee.d.ts",

    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  }
}